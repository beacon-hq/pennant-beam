{
    "name": "beacon-hq/pennant-beam",
    "description": "Laravel integration for @beacon-hq/beam",
    "type": "library",
    "require": {
        "beacon-hq/pennant-driver": "dev-main",
        "firebase/php-jwt": "^6.11",
        "illuminate/contracts": "^10|^11|^12",
        "laravel/pennant": "^1.14",
        "laravel/sanctum": "^4.2"
    },
    "require-dev": {
        "captainhook/captainhook-phar": "^5.25",
        "captainhook/hook-installer": "^1.0",
        "larastan/larastan": "^2.9.8",
        "laravel/pint": "^1.18",
        "orchestra/pest-plugin-testbench": "^3.0",
        "orchestra/testbench": "^9.8",
        "orchestra/workbench": "^9.11",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-faker": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2",
        "ramsey/conventional-commits": "^1.6"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Beacon\\PennantBeam\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Davey Shafik",
            "email": "davey@php.net"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "captainhook/hook-installer": true,
            "pestphp/pest-plugin": true
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "workbench/app/",
            "Tests\\": "tests"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi",
            "@php vendor/bin/phpstan analyse --verbose --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Beacon\\PennantBeam\\Providers\\BeamServiceProvider"
            ]
        }
    }
}
